
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/selector_map_infowindow"

    >

    <ImageView
        android:contentDescription="Foto"
        android:id="@+id/photo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentLeft="true"
        />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:layout_toRightOf="@+id/photo"
        android:layout_marginLeft="5dp"/>

    <ProgressBar
    android:id="@+id/progressImg"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginRight="20dp"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="20dp"
    android:gravity="center|center_vertical"
    android:visibility="invisible"/>

    <TextView
        android:id="@+id/tvMapCarModel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="false"
        android:layout_marginTop="8dp"
        android:text="Detalhes"
        android:layout_toRightOf="@+id/photo"
        android:layout_below="@+id/name"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:id="@+id/tvMapPlate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvMapCarModel"
        android:layout_alignStart="@+id/tvMapCarModel"
        android:layout_below="@+id/tvMapCarModel"
        android:singleLine="false"
        android:text="Detalhes" />

    <TextView
        android:id="@+id/tvMapCarColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvMapPlate"
        android:layout_alignStart="@+id/tvMapPlate"
        android:layout_below="@+id/tvMapPlate"
        android:singleLine="false"
        android:text="Detalhes" />
