<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:src="@drawable/lagoinhamain"
        android:layout_marginTop="60dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lagoinha-Paraipaba"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textAlignment="center"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="8dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/lagoinha1"
                android:layout_weight="1"
                android:padding="5dp"
                />
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/lagoinha2"
                android:layout_weight="1"
                android:padding="5dp"
                />
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/lagoinha3"
                android:layout_weight="1"
                android:padding="5dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/lagoinha4"
                android:layout_weight="1"
                android:padding="5dp"
                />
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/lagoinha5"
                android:layout_weight="1"
                android:padding="5dp"
                />
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/lagoinha6"
                android:layout_weight="1"
                android:padding="5dp"
                />
        </LinearLayout>

    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="ver motoristas"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:textColor="@color/colorPrimaryDark"
        android:text="Se tudo o que você quer da vida é sombra e água fresca, seja bem vindo à Praia da Lagoinha, no município de Paraipaba, a 100 Km da capital Fortaleza. Lá, o azul do mar e do céu só é quebrado pelas velas coloridas da grande quantidade de windsurfes e pelo branco da espuma das ondas que quebram na areia avermelhada. Tudo bem, tem o verde dos coqueiros que margeiam a praia e da vegetação rasteira que toma conta das dunas que ceram o local. O lugar parece uma pintura, com pequenas enseadas desenhadas nas areias pelas ondas."
        />
</LinearLayout>