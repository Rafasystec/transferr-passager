<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvLocationTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lagoinha-Paraipaba"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textColor="@color/colorText"
        android:textStyle="bold" />

    <include android:id="@+id/progressMainPicture" layout="@layout/progress_bar_layout" />
    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        card_view:cardCornerRadius="4dp">
        <ImageView
            android:id="@+id/ivMainPicture"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:src="@drawable/lagoinhamain"

            />
    </android.support.v7.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="8dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/ivPictureOne"
                android:layout_width="@dimen/locationPictureWidth"
                android:layout_height="@dimen/locationPictureHeigth"
                android:src="@drawable/no_photo_64"
                android:layout_weight="1"
                android:padding="5dp"
                android:clickable="true"
                />
            <ImageView
                android:id="@+id/ivPictureTwo"
                android:layout_width="@dimen/locationPictureWidth"
                android:layout_height="@dimen/locationPictureHeigth"
                android:src="@drawable/no_photo_64"
                android:layout_weight="1"
                android:padding="5dp"
                android:clickable="true"
                />
            <ImageView
                android:id="@+id/ivPictureThree"
                android:layout_width="@dimen/locationPictureWidth"
                android:layout_height="@dimen/locationPictureHeigth"
                android:src="@drawable/no_photo_64"
                android:layout_weight="1"
                android:padding="5dp"
                android:clickable="true"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/ivPictureFour"
                android:layout_width="@dimen/locationPictureWidth"
                android:layout_height="@dimen/locationPictureHeigth"
                android:src="@drawable/no_photo_64"
                android:layout_weight="1"
                android:padding="5dp"
                android:clickable="true"
                />
            <ImageView
                android:id="@+id/ivPictureFive"
                android:layout_width="@dimen/locationPictureWidth"
                android:layout_height="@dimen/locationPictureHeigth"
                android:src="@drawable/no_photo_64"
                android:layout_weight="1"
                android:padding="5dp"
                android:clickable="true"
                />
            <ImageView
                android:id="@+id/ivPictureSix"
                android:layout_width="@dimen/locationPictureWidth"
                android:layout_height="@dimen/locationPictureHeigth"
                android:src="@drawable/no_photo_64"
                android:layout_weight="1"
                android:padding="5dp"
                android:clickable="true"
                />
        </LinearLayout>

    </LinearLayout>
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btnSeeDrivers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:backgroundTint="@color/colorPrimaryDark"
        android:text="@string/seeDrivers"
        android:textColor="@color/colorButtonText" />
    <TextView
        android:id="@+id/tvLocationDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:textColor="@color/colorText"
        android:text="Local description"
        />
</LinearLayout>