<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <corners
        android:radius="10dp" />

    <gradient
        android:angle="45"
        android:centerX="1.2"
        android:centerY="1.2"
        android:endColor="#e3edc2"
        android:gradientRadius="4"
        android:startColor="#e3edc2"
        android:type="linear" />

    <!--If your shape requires only one solid color-->
    <!--<solid
        android:color="#FFFFFF" />-->

    <size
        android:height="35dp" />

    <!--Use android:dashWidth="2dp" and android:dashGap="2dp"
    to add dashes to your stroke-->
    <stroke
        android:width="0.1dp"
        android:color="@color/grey_400" />

    <!--If you want to add padding-->
    <padding
        android:left="10dp"
        android:right="40dp"
        />

</shape>