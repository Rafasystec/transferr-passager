<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item><layer-list>
        <item><shape>
            <gradient
                android:angle="45"
                android:centerX="1.2"
                android:centerY="1.2"
                android:endColor="#e3edc2"
                android:gradientRadius="4"
                android:startColor="#e3edc2"
                android:type="linear" />

            <stroke android:width="0.2dp"
                android:color="@color/grey_400" />

            <corners android:radius="4dp" />

            <padding
                android:left="3dp"
                android:right="3dp"
                 />
        </shape></item>
        <item >
            <bitmap android:gravity="right"
            android:src="@drawable/menu_down_24_black" />
        </item>
    </layer-list></item>

</selector>