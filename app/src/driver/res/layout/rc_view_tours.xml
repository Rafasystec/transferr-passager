<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:maxHeight="250dp"
    app:cardBackgroundColor="@color/activityBackground"
    android:focusableInTouchMode="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/note_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:textColor="@color/colorPrimaryDark"
            tools:text="Titulo"
            />

        <TextView
            android:id="@+id/note_item_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            tools:text="Descrição"
            android:layout_below="@id/note_item_title"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/imgTrash"
            android:layout_alignEnd="@+id/imgTrash"
            android:layout_alignRight="@+id/imgTrash"
            android:layout_marginBottom="12dp"
            android:src="@drawable/chevron_right" />
<!--
        <TextView
            android:id="@+id/advice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/note_item_description"
            android:text="Clique para adicionar passageiros."
            android:textSize="12sp"
            android:textColor="@color/red"
            android:layout_marginBottom="5dp"
            android:layout_alignParentLeft="true" />
        <TextView
            android:id="@+id/seats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@color/primary"
            android:textStyle="bold"
            tools:text="Assentos faltando"
            android:layout_below="@id/advice"
            />
-->
        <Button
            android:id="@+id/imgTrash"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/note_item_description"
            android:layout_marginEnd="8dp"
            android:background="@drawable/delete"
            android:focusableInTouchMode="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
